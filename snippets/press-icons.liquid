{%- comment -%}
  Sijohome Press & Certification Icons
  
  This snippet displays press mentions and certification logos.
  Commonly used in footers, product pages, or trust sections.
  
  Usage:
  {% render 'press-icons' %}
  
  Optional parameters:
  - alignment: 'left', 'center', 'right' (default: 'center')
  - size: 'small', 'medium', 'large' (default: 'medium')
{%- endcomment -%}

{%- if settings.show_press_icons -%}
  {%- liquid
    assign alignment = alignment | default: 'center'
    assign size = size | default: 'medium'
    
    case size
      when 'small'
        assign icon_size = '40'
      when 'large'
        assign icon_size = '80'
      else
        assign icon_size = '60'
    endcase
  -%}
  
  <div class="press-icons press-icons--{{ alignment }}">
    {%- if settings.bcorp_logo != blank -%}
      <div class="press-icon">
        <img src="{{ settings.bcorp_logo | image_url: width: icon_size }}" 
             alt="B-Corp Certified" 
             width="{{ icon_size }}" 
             height="{{ icon_size }}"
             loading="lazy">
      </div>
    {%- endif -%}
    
    {%- if settings.press_icon_1 != blank -%}
      <div class="press-icon">
        <img src="{{ settings.press_icon_1 | image_url: width: icon_size }}" 
             alt="{{ settings.press_icon_1.alt | escape }}" 
             width="{{ icon_size }}" 
             height="{{ icon_size }}"
             loading="lazy">
      </div>
    {%- endif -%}
    
    {%- if settings.press_icon_2 != blank -%}
      <div class="press-icon">
        <img src="{{ settings.press_icon_2 | image_url: width: icon_size }}" 
             alt="{{ settings.press_icon_2.alt | escape }}" 
             width="{{ icon_size }}" 
             height="{{ icon_size }}"
             loading="lazy">
      </div>
    {%- endif -%}
  </div>
  
  <style>
    .press-icons {
      display: flex;
      align-items: center;
      gap: 1.5rem;
      margin: 1rem 0;
    }
    
    .press-icons--left {
      justify-content: flex-start;
    }
    
    .press-icons--center {
      justify-content: center;
    }
    
    .press-icons--right {
      justify-content: flex-end;
    }
    
    .press-icon {
      opacity: 0.7;
      transition: opacity 0.2s ease;
    }
    
    .press-icon:hover {
      opacity: 1;
    }
    
    .press-icon img {
      max-width: 100%;
      height: auto;
      filter: grayscale(1);
      transition: filter 0.2s ease;
    }
    
    .press-icon:hover img {
      filter: grayscale(0);
    }
    
    @media screen and (max-width: 749px) {
      .press-icons {
        gap: 1rem;
      }
    }
  </style>
{%- endif -%}
