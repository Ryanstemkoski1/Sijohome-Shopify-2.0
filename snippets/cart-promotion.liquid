{%- comment -%}
  Sijohome Cart Promotion Bar
  
  This snippet displays promotional messages in the cart based on cart total.
  Encourages customers to reach certain thresholds for benefits.
  
  Usage:
  {% render 'cart-promotion' %}
{%- endcomment -%}

{%- if settings.show_cart_promotion_bar -%}
  {%- liquid
    assign cart_total_cents = cart.total_price
    assign threshold_1_cents = settings.promotion_threshold_1 | times: 100
    assign show_promotion = false
    assign promotion_message = ''
    assign progress_percentage = 0
    
    if cart_total_cents < threshold_1_cents
      assign remaining_amount = threshold_1_cents | minus: cart_total_cents
      assign remaining_dollars = remaining_amount | divided_by: 100
      assign promotion_message = 'Add $' | append: remaining_dollars | append: ' more for ' | append: settings.promotion_offer_1
      assign progress_percentage = cart_total_cents | times: 100 | divided_by: threshold_1_cents
      assign show_promotion = true
    elsif cart_total_cents >= threshold_1_cents
      assign promotion_message = settings.promotion_offer_1 | append: ' unlocked!'
      assign progress_percentage = 100
      assign show_promotion = true
    endif
  -%}
  
  {%- if show_promotion -%}
    <div class="cart-promotion-bar">
      <div class="cart-promotion-bar__content">
        <div class="cart-promotion-bar__message">
          {{ promotion_message }}
        </div>
        <div class="cart-promotion-bar__progress">
          <div class="cart-promotion-bar__progress-fill" style="width: {{ progress_percentage }}%;"></div>
        </div>
      </div>
    </div>
    
    <style>
      .cart-promotion-bar {
        background: rgb(var(--color-background-2));
        border: 1px solid rgba(var(--color-foreground), 0.1);
        border-radius: 0.5rem;
        padding: 1rem;
        margin-bottom: 1rem;
        text-align: center;
      }
      
      .cart-promotion-bar__message {
        font-size: 0.875rem;
        font-weight: 500;
        color: rgb(var(--color-foreground));
        margin-bottom: 0.5rem;
      }
      
      .cart-promotion-bar__progress {
        width: 100%;
        height: 0.5rem;
        background: rgba(var(--color-foreground), 0.1);
        border-radius: 0.25rem;
        overflow: hidden;
      }
      
      .cart-promotion-bar__progress-fill {
        height: 100%;
        background: rgb(var(--color-button));
        transition: width 0.3s ease;
      }
    </style>
  {%- endif -%}
{%- endif -%}
