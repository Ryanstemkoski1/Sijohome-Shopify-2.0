      "block_order": [
        "badges",
        "vendor",
        "title",
        "price",
        "refresh_notice",
        "payment_terms",
        "separator",
        "description",
        "condition_info",
        "variant_picker",
        "quantity_selector",
        "buy_buttons",
        "pickup_availability",
        "accordion_refresh_process",
        "accordion_warranty",
        "accordion_sustainability",
        "complementary_products"
