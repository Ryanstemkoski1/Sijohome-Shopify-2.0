    "refresh-benefits": {
      "type": "multi-column",
      "blocks": {
        "benefit-1": {
          "type": "image_with_text",
          "settings": {
            "title": "Great Value",
            "heading_tag": "h4",
            "content": "<p>Get premium SIJO quality at a fraction of the original price.</p>"
          }
        },
        "benefit-2": {
          "type": "image_with_text",
          "settings": {
            "title": "Quality Assured",
            "heading_tag": "h4",
            "content": "<p>Rigorous 15-point inspection ensures every product meets our standards.</p>"
          }
        },
        "benefit-3": {
          "type": "image_with_text",
          "settings": {
            "title": "Eco-Friendly",
            "heading_tag": "h4",
            "content": "<p>Reduce waste by giving quality products a second life.</p>"
          }
        },
        "benefit-4": {
          "type": "image_with_text",
          "settings": {
            "title": "Same Warranty",
            "heading_tag": "h4",
            "content": "<p>Full return policy and customer support, just like new products.</p>"
          }
        }
      },
      "block_order": ["benefit-1", "benefit-2", "benefit-3", "benefit-4"],
      "settings": {
        "color_scheme": "scheme-2",
        "separate_section_with_border": true,
        "columns_per_row": 4,
        "stack_on_mobile": true,
        "overlap_image": false,
        "content_alignment": "center",
        "text_alignment": "center",
        "spacing": "lg",
        "subheading": "SIJO Refresh",
        "title": "Smart Shopping, Sustainable Choice"
      }
    },
    "refresh-process": {
      "type": "image-with-text-overlay",
      "blocks": {
        "subheading-1": {
          "type": "subheading",
          "settings": { "text": "Our Process" }
        },
        "heading-1": {
          "type": "heading",
          "settings": { "text": "Like New, Better Price", "heading_tag": "h2" }
        },
        "richtext-1": {
          "type": "richtext",
          "settings": {
            "content": "<p>Every Refresh product is carefully inspected, professionally cleaned, and restored to excellent condition before finding its new home.</p>"
          }
        },
        "button-1": {
          "type": "button",
          "settings": {
            "style": "solid",
            "text": "Learn About Refresh",
            "background": "#e2ea3d",
            "text_color": "#000000"
          }
        }
      },
      "block_order": ["subheading-1", "heading-1", "richtext-1", "button-1"],
      "settings": {
        "color_scheme": "scheme-4",
        "image_size": "lg",
        "allow_transparent_header": false,
        "reveal_on_scroll": true,
        "remove_vertical_spacing": false,
        "content_width": "md",
        "mobile_text_position": "place-self-center text-center",
        "desktop_text_position": "sm:place-self-center sm:text-center",
        "overlay_color": "#000000",
        "overlay_opacity": 40
      }
    },
    "related-products": {
      "type": "related-products",
      "settings": {
        "color_scheme": "scheme-1",
        "title": "More Refresh Products",
        "products_count": 4,
        "stack_products": false,
        "show_quick_buy": true,
        "desktop_products_per_row": 4
      }
    },
    "new-products-upsell": {
      "type": "featured-collections",
      "blocks": {
        "collection-1": {
          "type": "collection",
          "settings": {
            "collection": "new-products",
            "products_count": 3,
            "title": "Or Shop New Products",
            "link_url": "shopify://collections/all",
            "link_text": "Shop New Items"
          }
        }
      },
      "block_order": ["collection-1"],
      "settings": {
        "color_scheme": "scheme-1",
        "separate_section_with_border": true,
        "hide_product_information": false,
        "stack_products": false,
        "products_per_row_mobile": "1",
        "products_per_row_desktop": 3,
        "horizontal_spacing_factor": 1,
        "vertical_spacing_factor": 1,
        "subheading": "Prefer New?"
      }
    }
