            "show_below_gallery": false
          }
        },
        "accordion_warranty": {
          "type": "accordion",
          "settings": {
            "icon": "none",
            "title": "Warranty & Returns",
            "content": "<p>All Refresh products come with the same return policy and quality guarantee as our new products.</p>",
            "show_below_gallery": false
          }
        },
        "accordion_sustainability": {
          "type": "accordion",
          "settings": {
            "icon": "none",
            "title": "Environmental Impact",
            "content": "<p>By choosing Refresh, you're helping reduce waste and extending the life of quality products.</p>",
            "show_below_gallery": false
          }
        },
        "complementary_products": {
          "type": "complementary_products",
          "settings": {
            "title": "Complete Your Set",
            "products_count": 4,
            "show_below_gallery": true
          }
        }
