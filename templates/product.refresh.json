          "type": "price",
          "settings": { "show_taxes_notice": false }
        },
        "refresh_notice": {
          "type": "text",
          "settings": {
            "text": "<div class=\"refresh-notice\"><strong>SIJO Refresh:</strong> Pre-loved products restored to like-new condition at a great value</div>",
            "text_style": "body"
          }
        },
        "payment_terms": { "type": "payment_terms", "settings": {} },
        "separator": { "type": "separator", "settings": {} },
        "description": {
          "type": "description",
          "settings": { "collapse_content": false }
