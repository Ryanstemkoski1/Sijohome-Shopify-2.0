        "condition_info": {
          "type": "text",
          "settings": {
            "text": "<div class=\"condition-info\"><strong>Condition:</strong> Thoroughly inspected, cleaned, and restored to excellent condition</div>",
            "text_style": "body"
          }
        },
        "variant_picker": {
          "type": "variant_picker",
          "settings": {
            "hide_sold_out_variants": false,
            "selector_style": "block",
            "swatch_selector_style": "swatch"
          }
        },
        "quantity_selector": { "type": "quantity_selector", "settings": {} },
        "buy_buttons": {
          "type": "buy_buttons",
          "settings": {
            "show_payment_button": true,
            "show_gift_card_recipient": false
          }
        },
        "pickup_availability": {
          "type": "pickup_availability",
          "settings": {}
        },
        "accordion_refresh_process": {
          "type": "accordion",
          "settings": {
            "icon": "none",
            "title": "Our Refresh Process",
