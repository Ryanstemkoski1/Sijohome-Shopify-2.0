{%- if section.blocks.size > 0 -%}
  {%- assign color_scheme_hash = section.settings.color_scheme.settings.background_gradient | default: section.settings.color_scheme.settings.background | md5 -%}

  <div class="section-spacing color-scheme color-scheme--{{ section.settings.color_scheme.id }} color-scheme--bg-{{ color_scheme_hash }} {% if section.settings.separate_section_with_border %}bordered-section{% endif %}">
    <div class="container">
      <div class="section-stack">
        {%- render 'section-header', subheading: section.settings.subheading, heading: section.settings.heading, content: section.settings.content, text_alignment: 'center' -%}

        <div class="comparison-chart">
          <div class="comparison-chart__table">
            {%- assign title_block = section.blocks | where: 'type', 'title_row' | first -%}
            {%- assign content_blocks = section.blocks | where: 'type', 'content_row' -%}
            
            {%- if title_block -%}
              <!-- Header Row -->
              <div class="comparison-chart__row comparison-chart__row--header">
                <div class="comparison-chart__cell comparison-chart__cell--empty"></div>
                <div class="comparison-chart__cell comparison-chart__cell--header comparison-chart__cell--sijo">
                  {%- if title_block.settings.sijo_logo != blank -%}
                    <div class="comparison-chart__logo">
                      <img src="{{ title_block.settings.sijo_logo | image_url: width: 120 }}" 
                           alt="SIJO" width="120" height="40" loading="lazy">
                    </div>
                  {%- endif -%}
                  <h4 class="comparison-chart__brand-name">{{ title_block.settings.sijo_title | default: 'SIJO' }}</h4>
                </div>
                <div class="comparison-chart__cell comparison-chart__cell--header comparison-chart__cell--competitor">
                  {%- if title_block.settings.competitor_logo != blank -%}
                    <div class="comparison-chart__logo">
                      <img src="{{ title_block.settings.competitor_logo | image_url: width: 120 }}" 
                           alt="{{ title_block.settings.competitor_title | escape }}" width="120" height="40" loading="lazy">
                    </div>
                  {%- endif -%}
                  <h4 class="comparison-chart__brand-name">{{ title_block.settings.competitor_title | default: 'Others' }}</h4>
                </div>
              </div>
            {%- endif -%}

            {%- for block in content_blocks -%}
              <div class="comparison-chart__row" {{ block.shopify_attributes }}>
                <div class="comparison-chart__cell comparison-chart__cell--feature">
                  <h5 class="comparison-chart__feature-name">{{ block.settings.feature_name }}</h5>
                  {%- if block.settings.feature_description != blank -%}
                    <p class="comparison-chart__feature-description">{{ block.settings.feature_description }}</p>
                  {%- endif -%}
                </div>
                <div class="comparison-chart__cell comparison-chart__cell--sijo-value">
                  {%- case block.settings.sijo_status -%}
                    {%- when 'check' -%}
                      <div class="comparison-chart__icon comparison-chart__icon--check">
                        {%- render 'icon' with 'checkmark' -%}
                      </div>
                    {%- when 'cross' -%}
                      <div class="comparison-chart__icon comparison-chart__icon--cross">
                        {%- render 'icon' with 'close' -%}
                      </div>
                    {%- when 'text' -%}
                      <span class="comparison-chart__text">{{ block.settings.sijo_text }}</span>
                    {%- when 'rating' -%}
                      <div class="comparison-chart__rating">
                        {%- for i in (1..5) -%}
                          <span class="comparison-chart__star {% if i <= block.settings.sijo_rating %}comparison-chart__star--filled{% endif %}">★</span>
                        {%- endfor -%}
                      </div>
                  {%- endcase -%}
                </div>
                <div class="comparison-chart__cell comparison-chart__cell--competitor-value">
                  {%- case block.settings.competitor_status -%}
                    {%- when 'check' -%}
                      <div class="comparison-chart__icon comparison-chart__icon--check">
                        {%- render 'icon' with 'checkmark' -%}
                      </div>
                    {%- when 'cross' -%}
                      <div class="comparison-chart__icon comparison-chart__icon--cross">
                        {%- render 'icon' with 'close' -%}
                      </div>
                    {%- when 'question' -%}
                      <div class="comparison-chart__icon comparison-chart__icon--question">
                        {%- render 'icon' with 'question' -%}
                      </div>
                    {%- when 'text' -%}
                      <span class="comparison-chart__text">{{ block.settings.competitor_text }}</span>
                    {%- when 'rating' -%}
                      <div class="comparison-chart__rating">
                        {%- for i in (1..5) -%}
                          <span class="comparison-chart__star {% if i <= block.settings.competitor_rating %}comparison-chart__star--filled{% endif %}">★</span>
                        {%- endfor -%}
                      </div>
                  {%- endcase -%}
                </div>
              </div>
            {%- endfor -%}
          </div>

          {%- if section.settings.button_text != blank and section.settings.button_url != blank -%}
            <div class="comparison-chart__cta">
              <a href="{{ section.settings.button_url }}" class="button button--primary">
                {{ section.settings.button_text }}
              </a>
            </div>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>

  <style>
    .comparison-chart__table {
      display: grid;
      grid-template-columns: 1fr;
      gap: 0;
      border-radius: 0.75rem;
      overflow: hidden;
      box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
      background: rgb(var(--color-background));
    }

    .comparison-chart__row {
      display: grid;
      grid-template-columns: 2fr 1fr 1fr;
      border-bottom: 1px solid rgb(var(--color-border));
    }

    .comparison-chart__row:last-child {
      border-bottom: none;
    }

    .comparison-chart__row--header {
      background: rgb(var(--color-base-background-2));
    }

    .comparison-chart__cell {
      padding: 1.5rem 1rem;
      display: flex;
      align-items: center;
      justify-content: center;
      text-align: center;
      border-right: 1px solid rgb(var(--color-border));
    }

    .comparison-chart__cell:last-child {
      border-right: none;
    }

    .comparison-chart__cell--empty {
      background: transparent;
    }

    .comparison-chart__cell--feature {
      justify-content: flex-start;
      text-align: left;
      background: rgb(var(--color-base-background-1));
    }

    .comparison-chart__cell--sijo {
      background: rgb(var(--color-base-accent-1));
      color: rgb(var(--color-base-text));
      flex-direction: column;
      gap: 0.5rem;
    }

    .comparison-chart__cell--competitor {
      background: rgb(var(--color-base-background-2));
      flex-direction: column;
      gap: 0.5rem;
    }

    .comparison-chart__cell--sijo-value {
      background: rgb(var(--color-base-accent-1) / 0.1);
    }

    .comparison-chart__logo img {
      max-height: 40px;
      width: auto;
    }

    .comparison-chart__brand-name {
      font-size: 1.125rem;
      font-weight: 600;
      margin: 0;
    }

    .comparison-chart__feature-name {
      font-size: 1rem;
      font-weight: 600;
      margin: 0 0 0.25rem 0;
      color: rgb(var(--color-foreground));
    }

    .comparison-chart__feature-description {
      font-size: 0.875rem;
      color: rgb(var(--color-foreground) / 0.7);
      margin: 0;
      line-height: 1.4;
    }

    .comparison-chart__icon {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 2rem;
      height: 2rem;
      border-radius: 50%;
    }

    .comparison-chart__icon--check {
      background: #16a34a;
      color: white;
    }

    .comparison-chart__icon--cross {
      background: #dc2626;
      color: white;
    }

    .comparison-chart__icon--question {
      background: #f59e0b;
      color: white;
    }

    .comparison-chart__icon svg {
      width: 1rem;
      height: 1rem;
    }

    .comparison-chart__text {
      font-weight: 500;
      color: rgb(var(--color-foreground));
    }

    .comparison-chart__rating {
      display: flex;
      gap: 0.125rem;
    }

    .comparison-chart__star {
      color: #d1d5db;
      font-size: 1.25rem;
    }

    .comparison-chart__star--filled {
      color: #f59e0b;
    }

    .comparison-chart__cta {
      text-align: center;
      margin-top: 2rem;
    }

    /* Mobile responsiveness */
    @media (max-width: 768px) {
      .comparison-chart__row {
        grid-template-columns: 1fr;
      }

      .comparison-chart__cell {
        padding: 1rem;
        border-right: none;
        border-bottom: 1px solid rgb(var(--color-border));
      }

      .comparison-chart__cell--feature {
        order: 1;
        background: rgb(var(--color-base-background-2));
        font-weight: 600;
      }

      .comparison-chart__cell--sijo-value {
        order: 2;
        background: rgb(var(--color-base-accent-1) / 0.1);
      }

      .comparison-chart__cell--competitor-value {
        order: 3;
        background: rgb(var(--color-base-background-1));
      }

      .comparison-chart__cell--sijo-value::before {
        content: "SIJO: ";
        font-weight: 600;
        margin-right: 0.5rem;
      }

      .comparison-chart__cell--competitor-value::before {
        content: "Others: ";
        font-weight: 600;
        margin-right: 0.5rem;
      }

      .comparison-chart__row--header .comparison-chart__cell--sijo-value::before,
      .comparison-chart__row--header .comparison-chart__cell--competitor-value::before {
        content: "";
        margin-right: 0;
      }
    }
  </style>
{%- endif -%}

{% schema %}
{
  "name": "Comparison Chart",
  "class": "shopify-section--comparison-chart",
  "tag": "section",
  "disabled_on": {
    "groups": ["header", "custom.overlay"]
  },
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:global.colors.scheme",
      "default": "scheme-1"
    },
    {
      "type": "checkbox",
      "id": "separate_section_with_border",
      "label": "t:global.section.separate_section_with_border",
      "default": true
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "inline_richtext",
      "id": "subheading",
      "label": "t:global.text.subheading"
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "t:global.text.heading",
      "default": "Why Choose SIJO?"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "t:global.text.content"
    },
    {
      "type": "header",
      "content": "Call to Action"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    }
  ],
  "blocks": [
    {
      "type": "title_row",
      "name": "Title Row",
      "limit": 1,
      "settings": [
        {
          "type": "header",
          "content": "SIJO Column"
        },
        {
          "type": "image_picker",
          "id": "sijo_logo",
          "label": "SIJO Logo"
        },
        {
          "type": "text",
          "id": "sijo_title",
          "label": "SIJO Title",
          "default": "SIJO"
        },
        {
          "type": "header",
          "content": "Competitor Column"
        },
        {
          "type": "image_picker",
          "id": "competitor_logo",
          "label": "Competitor Logo"
        },
        {
          "type": "text",
          "id": "competitor_title",
          "label": "Competitor Title",
          "default": "Others"
        }
      ]
    },
    {
      "type": "content_row",
      "name": "Comparison Row",
      "settings": [
        {
          "type": "header",
          "content": "Feature"
        },
        {
          "type": "text",
          "id": "feature_name",
          "label": "Feature Name",
          "default": "Temperature Regulation"
        },
        {
          "type": "textarea",
          "id": "feature_description",
          "label": "Feature Description"
        },
        {
          "type": "header",
          "content": "SIJO Value"
        },
        {
          "type": "select",
          "id": "sijo_status",
          "label": "SIJO Status",
          "options": [
            { "value": "check", "label": "Checkmark" },
            { "value": "cross", "label": "Cross" },
            { "value": "text", "label": "Custom Text" },
            { "value": "rating", "label": "Star Rating" }
          ],
          "default": "check"
        },
        {
          "type": "text",
          "id": "sijo_text",
          "label": "SIJO Text",
          "info": "Used when status is 'Custom Text'"
        },
        {
          "type": "range",
          "id": "sijo_rating",
          "label": "SIJO Rating",
          "min": 1,
          "max": 5,
          "step": 1,
          "default": 5,
          "info": "Used when status is 'Star Rating'"
        },
        {
          "type": "header",
          "content": "Competitor Value"
        },
        {
          "type": "select",
          "id": "competitor_status",
          "label": "Competitor Status",
          "options": [
            { "value": "check", "label": "Checkmark" },
            { "value": "cross", "label": "Cross" },
            { "value": "question", "label": "Question Mark" },
            { "value": "text", "label": "Custom Text" },
            { "value": "rating", "label": "Star Rating" }
          ],
          "default": "cross"
        },
        {
          "type": "text",
          "id": "competitor_text",
          "label": "Competitor Text",
          "info": "Used when status is 'Custom Text'"
        },
        {
          "type": "range",
          "id": "competitor_rating",
          "label": "Competitor Rating",
          "min": 1,
          "max": 5,
          "step": 1,
          "default": 3,
          "info": "Used when status is 'Star Rating'"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Comparison Chart",
      "blocks": [
        {
          "type": "title_row"
        },
        {
          "type": "content_row",
          "settings": {
            "feature_name": "Temperature Regulation",
            "feature_description": "Keeps you cool and comfortable all night"
          }
        },
        {
          "type": "content_row",
          "settings": {
            "feature_name": "Sustainable Materials",
            "feature_description": "Eco-friendly eucalyptus fibers"
          }
        },
        {
          "type": "content_row",
          "settings": {
            "feature_name": "Hypoallergenic",
            "feature_description": "Naturally resistant to allergens"
          }
        },
        {
          "type": "content_row",
          "settings": {
            "feature_name": "Durability",
            "feature_description": "Maintains quality wash after wash"
          }
        }
      ]
    }
  ]
}
{% endschema %}
